!!! 5
%html
  %head
    %meta(charset="utf-8")
    %title #{(title ? title + " - " : "")}IceCube
    %meta(name="description" content="Ice White's BLOG.")
    %meta(name="viewport" content="width=device-width")
    = seo
    %link(href="/style.css" rel="stylesheet")
    %link(href="/print.css" rel="stylesheet" media="print")
    :if theme
        %link(href=theme rel="stylesheet")
    %link(rel="alternate" type="application/rss+xml" title="RSS 2.0" href="/feed.xml")
    %link(href="/favicon.ico" rel="icon" type="image/x-icon")
  %body
    #container
      #header
        %a{href: "/"}
          %img.logo{src: "/logo.png", alt: "Ice Cube"}
          .tagline
            Ice White's BLOG
      = content

      #footer
        %p &copy; 2013 Ice White.
        %p Code snippets colored by&nbsp;
          %a{href: "http://codemirror.net"} CodeMirror.
        %p
          %a{href: "https://github.com/creationix/wheat"} Wheat&nbsp;
          running on node #{process.version}
    :script
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    :script
      try {
      var pageTracker = _gat._getTracker("UA-37396231-1");
      pageTracker._trackPageview();
      } catch(err) {}

